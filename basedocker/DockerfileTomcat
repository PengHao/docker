FROM wolfpeng/base:1.0.0
MAINTAINER WolfPeng penghao345@gmail.com

ADD start.sh /home/start.sh
ADD tomcat7.tar.gz /home/
RUN apt-get update \
	&& apt-get install -y nginx \
	&& echo '#set tomcat environment' >> /etc/profile \
	&& echo 'CATALINA_HOME=/home/tomcat7' >> /etc/profile \
	&& echo 'export CATALINA_HOME' >> /etc/profile \
	&& echo 'JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-amd64' >> /home/tomcat7/bin/catalina.sh \
	&& chmod +x /home/tomcat7/bin/*.sh
ADD nginx.conf /home/nginx.conf
RUN chmod +x /home/start.sh
RUN chmod 777 /home/tomcat7/webapps
#ADD deploy/sample.war /home/tomcat7/webapps/sample.war
